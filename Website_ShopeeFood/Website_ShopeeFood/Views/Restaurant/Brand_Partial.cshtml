@model IEnumerable<Website_ShopeeFood.Models.BrandModel>

@foreach(var item in Model)
{
    <div class="list-item-restaurant1" style="float:left;">
        <a class="item-content1" target="_blank" href="#">
            <div class="row no-gutters">
                <div class="col-auto">
                    <div class="image-restaurant-tab">
                        <img src="@item.Restaurants.Image" style="height:90px; width:143px;">
                    </div>
                </div>
                <div class="col">
                    <div class="name-rest options" style="color:black; font-weight: 700;">
                            <span title="@item.Restaurants.NameofRestaurant">@item.Restaurants.NameofRestaurant></span>
                    </div>
                    <div class="row txt">
                        <div class="col">
                            <div class="address-rest mb-1">
                                @item.Restaurants.Address
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
}

@model IEnumerable<Website_ShopeeFood.Models.UsersModel>

@if (@ViewBag.fullName == null)
{
    <a asp-area="" asp-controller="Login" asp-action="Login_Users"><button class="btn btn-none-bg btn-login">Đăng Nhập</button></a>
}
else
{
    <div class="dropdown">
        <button class="use-account col-auto dropdown-toggle" type="button" id="dropdowwnInfoButton" data-bs-toggle="dropdown" aria-expanded="false" style="border:none; background-color:white;">
            <img src="@ViewBag.imageUser" style="height:30px; width:30px;">
            <span class="name-user">
                @ViewBag.fullName
            </span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownInfoButon">
            <li class="dropdown-item">
                <i class="fa fa-calendar" aria-hidden="true"></i>
                <a asp-action="ListInvoices" asp-controller="Invoices">
                    <span class="language-item">Lịch Sử Đơn Hàng</span>
                </a>
            </li>
            <li class="dropdown-item">
                <i class="fas fa-wallet"></i>
                <span class="language-item">Ví Voucher</span>
            </li>
            <li class="dropdown-item">
                <i class="fa fa-user" aria-hidden="true"></i>
                <a asp-action="UpdateUserInfo" asp-controller="User">
                    <span class="language-item">Cập Nhật Tài Khoản</span>
                </a>
            </li>
            <li class="dropdown-item">
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                <span class="language-item">
                    <a asp-action="LogOut" asp-controller="Login">
                        Đăng Xuất
                    </a>
                </span>
            </li>
        </ul>
    </div>
}


<style>
    .dropdown-item a{
        color: black;
        text-decoration: none;
    }

    .dropdown-item a:hover{
        color:black;
        text-decoration:none;
    }

    .dropdown-item i{
        color: #ee4d2d;
        padding-right: 15px;
        padding-bottom: 12px;
    }
</style>
@{
    ViewData["Title"] = "Login_Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="/css/StyleForHomePage.css">
<link rel="stylesheet" href="/css/Login.css">
<link rel="stylesheet" href="/css/BodyForHomePage.css">
<link rel="stylesheet" href="/css/Footer.css">
<link rel="stylesheet" href="/css/ContentForHomePage.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

@using (Html.BeginForm())
{
    <div class="now-login" style="background-color:white;">
        <div class="content">
            <div class="login-title">
                Đăng Nhập
            </div>
            @*<div class="login-methods">
        <div class="login-item-phone">
        <i class="fa fa-phone" aria-hidden="true"></i>
        Số Điện Thoại
        </div>
        <div class="login-item-facebook">
        <i class="fab fa-facebook    "></i>
        Facebook
        </div>
        <div class="login-item-email">
        <i class="fa fa-file" aria-hidden="true"></i>
        Email
        </div>
        </div>*@
            <p>Hoặc Đăng Nhập Bằng Tài Khoản Của Bạn</p>
            <div class="login-details">
                <div class="field-groups">
                    <div class="login-group">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                        <input name="userName" type="text" placeholder="Tên đăng nhập">
                    </div>
                    <div class="login-group">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                        <input name="password" type="password" placeholder="Mật Khẩu">
                    </div>
                </div>
                <div class="login-feature">
                    <div class="save-login">
                        <input type="checkbox" id="RememberMe" checked>
                        <p>Lưu thông tin đăng nhập</p>
                    </div>
                    <div class="frogot-password">
                        <a asp-action="Register" asp-controller="Login">Đăng Ký Tài Khoản</a> &nbsp;&nbsp;&nbsp;&nbsp;
                        <a asp-action="Change_Password" asp-controller="Login">Quên Mật Khẩu?</a>
                    </div>
                </div>
                <button type="submit" formmethod="post" name="submit" class="btn btn-primary" value="submit" style="color:black;">Đăng Nhập</button>
            </div>

            <div class="privacy">
                Chúng tôi không sử dụng thông tin của bạn với bất kỳ mục đích nào. Bằng cách đăng nhập hoặc đăng ký, bạn đồng ý với
                <a target="_blank" href="https://shopeefood.vn/gioi-thieu#footer-bottom">Chính sách quy định của Shopee</a>
            </div>
        </div>
    </div>
}


<script>
    var msg = "@((string)ViewBag.message)";

    if(msg != null && msg != "")
    {
        swal({
            title: "Thông Báo",
            text: "Register Successfully",
            icon: "success",
        });
    }

    var msg1 = "@((string)ViewBag.check_Login)";

    if (msg1 != null && msg1 != "") {
        swal({
            title: "Thông Báo",
            text: msg1,
            icon: "success",
        });
    }
</script>




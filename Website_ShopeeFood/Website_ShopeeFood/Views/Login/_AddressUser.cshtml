@model IEnumerable<Website_ShopeeFood.Models.AddressUserModel>

@if ( Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div class="item-local" style="border-bottom: solid 1px #ebebeb; width:92%;" onclick="selectAddress(@item.ID)">
            <div class="row align-item-center" style="cursor: pointer; padding: 17px 3px;">
                <div class="icon" style="position:absolute;  padding: 3px 15px;">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <div class="address-user" style="padding-left:5px; width:92%;">
                    <div class="txt-dark txt-bold" style="font-size:16px;">
                        @item.Name
                    </div>
                    <div class="txt-gray" style="font-size:13px;">
                        @item.Address
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="item-local">
        <div class="row align-item-center" style="cursor: pointer; width: 92%;">
            <img src="https://shopeefood.vn/app/assets/img/no-results.png?7aafd0b598221e54f8ef4a4bd1b38297" style="margin-left: 350px; margin-top: 30px; height: 49px; width: 67px;" />
            <div>
                <div class="no-data-text" style="text-align: center; padding: 17px 0px; font-size: 18px; margin-left: 100px; color: lightslategray;">
                    Hình như bạn chưa có thông tin địa chỉ giao hàng.
                </div>
            </div>
        </div>
    </div>
}

<script>
    function selectAddress(idAddress) {
        $.ajax({
            type: "GET",
            url: "/Login/getIdAddress?idAddress=" + idAddress + "",
            success: function () {
                window.location = "@Url.Action("Index","Home")";
            }
        });
    }
</script>
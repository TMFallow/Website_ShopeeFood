@{
    ViewData["Title"] = "UpdateUserInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/UpdateInfo.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

<div class="container info-user-area">
    <div class="col-profile-right">
        <div class="header-profile">
            <div class="row align-item-center" id="header_partial" style="display:none;">

               <!------------------------------------------------------------->

            </div>
        </div>
        <div class="item-profile">
            <div class="item-nagivation">
                <a asp-action="UpdateUserInfo" asp-controller="User" title="Cập Nhật Tài Khoản" class="item-nagivation">
                    <div class="nagivation-item-profile active">
                        <div class="icon-item-profile">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                        <div class="title-item-profile">
                            Cập Nhật Tài Khoản
                        </div>
                        <div class="narrow">
                            >
                        </div>
                    </div>
                </a>
            </div>
            <div class="item-nagivation">
                <a asp-action="UpdateUserAddress" asp-controller="User" title="Cập Nhật Địa Chỉ" class="item-nagivation">
                    <div class="nagivation-item-profile">
                        <div class="icon-item-profile">
                            <i class="fa fa-location-arrow" aria-hidden="true"></i>
                        </div>
                        <div class="title-item-profile">
                            Cập Nhật Địa Chỉ&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </div>
                        <div class="narrow">
                            >
                        </div>
                    </div>
                </a>
            </div>
            <div class="item-nagivation">
                <a href="#" title="Thông Tin Đơn Hàng" class="item-nagivation">
                    <div class="nagivation-item-profile">
                        <div class="icon-item-profile">
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        </div>
                        <div class="title-item-profile">
                            Thông Tin Đơn Hàng
                        </div>
                        <div class="narrow">
                            >
                        </div>
                    </div>
                </a>
            </div>
            <div class="item-nagivation">
                <a href="#" title="Phương Thức Thanh Toán" class="item-nagivation">
                    <div class="nagivation-item-profile">
                        <div class="icon-item-profile">
                            <i class="fas fa-coins    "></i>
                        </div>
                        <div class="title-item-profile">
                            Phương Thức Thanh Toán
                        </div>
                        <div class="narrow">
                            >
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>


<div class="col-info-user" id="details_info_partial">
    
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    $('#header_partial').load("/User/UserInfo_Partial")
    $('#details_info_partial').load("/User/DetailUserInfo_Partial")
</script>

<script>
    var msg = "@((string)ViewBag.updatemsg)";

    if (msg != null && msg != "") {
        swal({
            title: "Thông Báo",
            text: msg,
            icon: "success",
        });
    }

    var msg = "@((string)ViewBag.updateMessage)";

    if (msg != null && msg != "") {
        swal({
            title: "Thông Báo",
            text: msg,
            icon: "success",
        });
    }
</script>


<script>
    var profile = document.getElementsByClassName("item-profile");

    var items = document.getElementsByClassName("nagivation-item-profile");

    for (var i = 0; i < items.length; i++) {
        items[i].addEventListener("click", function () {
            var current = document.getElementsByClassName("active");
            current[0].className = current[0].className.replace(" active", "");
            this.className += " active";
        });
    }
</script>
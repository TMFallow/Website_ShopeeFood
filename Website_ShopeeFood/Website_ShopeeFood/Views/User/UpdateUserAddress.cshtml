                <a asp-action="UpdateUserInfo" asp-controller="User" title="Cập Nhật Tài Khoản" class="item-nagivation">
                    <div class="nagivation-item-profile">
                        <div class="icon-item-profile">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </div>
                        <div class="title-item-profile">
                            Cập Nhật Tài Khoản
                        </div>
                        <div class="narrow">
                            >
                        </div>
                    </div>
                </a>
            </div>
            <div class="item-nagivation">
                <a asp-action="UpdateUserAddress" asp-controller="User" title="Cập Nhật Tài Khoản" class="item-nagivation">
                    <div class="nagivation-item-profile active">
                        <div class="icon-item-profile">
                            <i class="fa fa-location-arrow" aria-hidden="true"></i>
                        </div>
                        <div class="title-item-profile">
                            Cập Nhật Địa Chỉ&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </div>
                        <div class="narrow">
                            >
                        </div>
                    </div>
                </a>
            </div>
            <div class="item-nagivation">
                <a href="#" title="Cập Nhật Tài Khoản" class="item-nagivation">
                    <div class="nagivation-item-profile">
                        <div class="icon-item-profile">
                            <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        </div>
                        <div class="title-item-profile">
                            Thông Tin Đơn Hàng
                        </div>
                        <div class="narrow">
                            >
                        </div>
                    </div>
                </a>
            </div>
            <div class="item-nagivation">
                <a href="#" title="Cập Nhật Tài Khoản" class="item-nagivation">
                    <div class="nagivation-item-profile">
                        <div class="icon-item-profile">
                            <i class="fas fa-coins    "></i>
                        </div>
                        <div class="title-item-profile">
                            Phương Thức Thanh Toán
                        </div>
                        <div class="narrow">
                            >
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>


<div class="" id="address_info_partial">

</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    $('#header_partial').load("/User/UserInfo_Partial")
    $('#address_info_partial').load("/User/AddressUserInfo_Partial")
</script>


<script>
    var message = "@((string)ViewBag.checkUpdateAddress)";

    if (message != null && message != "") {
        swal({
            title: "Thông Báo",
            text: message,
            icon: "success",
        });
    }
</script>
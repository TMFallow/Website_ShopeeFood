<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Website_ShopeeFood</title>
    <link rel="stylesheet" href="/css/StyleForHomePage.css">
    <link rel="stylesheet" href="/css/BodyForHomePage.css">
    <link rel="stylesheet" href="/css/Footer.css">
    <link rel="stylesheet" href="/css/ContentForHomePage.css">
    <link rel="stylesheet" href="/css//UpdateInfo.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>

<body>
    <div id="app">
        <div class="wrapper">
            <header class="main-header">
                <div class="container-header">
                    <div class="container">
                        <div class="header-content row navbar justify-content-between align-item-center">
                            <div class="logo col-auto">
                                <span>
                                    <a asp-action="Index" asp-controller="Home">
                                        <img src="https://shopeefood.vn/app/assets/img/shopeefoodvn.png?4aa1a38e8da801f4029b80734905f3f7" alt="ShopeeFood">
                                    </a>
                                </span>
                            </div>
                            <div class="select-local col-auto">
                                <div class="dropdown">
                                    <div class="dropdown-toggle odropdown" type="button" id="local-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        TP.HCM
                                    </div>
                                    <div class="dropdown-menu" id="partial_zone" aria-labelledby="local-dropdown" a>
                                        
                                    </div>
                                </div>
                            </div>

                            <div class="main-nav col-auto" id="parital_menu">

                            </div>

                            <div class="main-search col-auto">
                                <span data-toggle="modal" data-target="#modal-search">
                                    <span class="fa fa-search"> </span>
                                </span>
                            </div>
                            <div id="partial_login" class="use-account col-auto" style="cursor:pointer;">

                            </div>
                            <div class="language dropdown col-auto">
                                <div class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span><i class="icon icon-lag-vn"></i></span>
                                </div>
                                <div class="dropdown-menu dropdown-language" aria-labelledby="dropdownMenuButton">
                                    <div class="dropdown-item">
                                        <span class="icon icon-lag-en"></span>
                                        <span class="language-item">Tiếng Anh</span>
                                    </div>
                                    <div class="dropdown-item">
                                        <span><i class="icon icon-lag-vn"></i></span>
                                        <span class="language-item">Tiếng Việt</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal modal-search fade" id="modal-search" tabindex="-1" role="dialog" style="display:none; background-color: rgba(0,0,0,0.60)" aria-hidden="true">
                    <div class="modal-dialog" role=document>
                        <div class="model-content">
                            <span class="close" data-dismiss="modal">x</span>
                            <div class="modal-search-form">
                                <span class="sub-title">Đặt Thực Phẩm, Giao Hàng Từ 20'... Có Đến 13000 Địa Điểm Tại TP. HCM</span>
                                @*<input class="search-input" name="search-input" type="text" autocomplete="off" value="">*@
                                <input type="text" placeholder="" class="search-input" />
                            </div>
                        </div>
                    </div>
                </div>
            </header>

        <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
        <footer class="main-footer">
            <div class="container">
                <div class="container-inner">
                    <div class="block-footer">
                        <h2>
                            <p style="color: black; font-size: 18px;">
                                Công Ty
                            </p>
                        </h2>
                        <ul>
